<Window x:Class="QuizProject.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:QuizProject"
		WindowStartupLocation="CenterScreen"
		mc:Ignorable="d"
		Title="The Quiz"
		Height="300" Width="400"
		Background="#257985"
		>
	<Window.Resources>
		<ResourceDictionary Source="Dictionary1.xaml"/>
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="3*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<Border Grid.ColumnSpan="2" BorderBrush="{StaticResource raspberry}" BorderThickness="0 0 0 3">
			<StackPanel>
				<Label x:Name="lblUserName" FontSize="20" Foreground="{StaticResource whitewash}" HorizontalAlignment="Center" VerticalAlignment="Center" />
			</StackPanel>
		</Border>

		<ListBox x:Name="lstQuestions" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Row="1" BorderThickness="0" Background="{StaticResource lagoon}" SelectionChanged="lstQuestions_SelectionChanged"/>

		<StackPanel Grid.Column="1" Grid.Row="1">
			<Label x:Name="lblQuestion"/>
			<RadioButton x:Name="rdoOption1" Visibility="{Binding VisibilityProperty, Converter={StaticResource boolToVis}}"/>
			<RadioButton x:Name="rdoOption2" Visibility="{Binding VisibilityProperty, Converter={StaticResource boolToVis}}"/>
			<RadioButton x:Name="rdoOption3" Visibility="{Binding VisibilityProperty, Converter={StaticResource boolToVis}}"/>
			<RadioButton x:Name="rdoOption4" Visibility="{Binding VisibilityProperty, Converter={StaticResource boolToVis}}"/>
		</StackPanel>

		<Border Grid.ColumnSpan="2" Grid.Row="2" BorderBrush="{StaticResource raspberry}" BorderThickness="0 3 0 0">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="auto"/>
				</Grid.ColumnDefinitions>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<ProgressBar x:Name="pbSavedQues" Minimum="0" Width="175" Height="10" Background="{StaticResource saltwater}" Foreground="#35fc5c" BorderThickness="1" BorderBrush="Black"/>

					<Label x:Name="lblSaved" Content="{Binding ElementName=pbSavedQues, Path=Value}" ContentStringFormat="{}{0} questions saved." Margin="0 2 0 0"/>
				</StackPanel>

				<Border BorderBrush="Black" BorderThickness="2" Grid.Column="1" Width="75" Margin="5">
					<Button x:Name="btnSubmit" Content="Submit" Background="{StaticResource lagoon}" Click="btnSubmit_Click" />
				</Border>

			</Grid>
		</Border>

	</Grid>
</Window>
